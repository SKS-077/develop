<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simon Says Game</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #1d1d1d;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        .game-container {
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(2, 150px);
            grid-gap: 20px;
            justify-content: center;
            margin-bottom: 30px;
        }

        .button {
            width: 150px;
            height: 150px;
            border-radius: 15px;
            cursor: pointer;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

        #green {
            background-color: #4CAF50;
        }

        #red {
            background-color: #f44336;
        }

        #yellow {
            background-color: #FFEB3B;
        }

        #blue {
            background-color: #2196F3;
        }

        #start-btn {
            background-color: #FFC107;
            border: none;
            padding: 15px 30px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 10px;
        }

        #start-btn:hover {
            background-color: #FF9800;
        }

        #message {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="game-container">
        <h1>Simon Says</h1>
        <div class="buttons">
            <div class="button" id="green"></div>
            <div class="button" id="red"></div>
            <div class="button" id="yellow"></div>
            <div class="button" id="blue"></div>
        </div>
        <div id="message">Wait for Simon to say...</div>
        <button id="start-btn">Start Game</button>
    </div>

    <script>
        const startButton = document.getElementById("start-btn");
        const buttons = document.querySelectorAll(".button");
        const message = document.getElementById("message");

        let gameSequence = [];
        let playerSequence = [];
        let level = 0;
        let gameOver = false;

        const colors = ['green', 'red', 'yellow', 'blue'];

        startButton.addEventListener('click', startGame);

        buttons.forEach(button => {
            button.addEventListener('click', handlePlayerInput);
        });

        function startGame() {
            if (gameOver) {
                resetGame();
            }
            message.textContent = "Wait for Simon to say...";
            level = 0;
            gameSequence = [];
            nextRound();
        }

        function nextRound() {
            level++;
            playerSequence = [];
            message.textContent = `Level ${level}`;
            
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            gameSequence.push(randomColor);
            flashSequence();
        }

        function flashSequence() {
            let i = 0;
            
            const interval = setInterval(() => {
                flashButton(gameSequence[i]);
                i++;
                if (i >= gameSequence.length) {
                    clearInterval(interval);
                    message.textContent = "Your turn!";
                }
            }, 1000);
        }

        function flashButton(color) {
            const button = document.getElementById(color);
            button.style.opacity = 1;
            setTimeout(() => {
                button.style.opacity = 0.7;
            }, 500);
        }

        function handlePlayerInput(event) {
            if (gameOver) return;

            const playerColor = event.target.id;

            playerSequence.push(playerColor);
            flashButton(playerColor);

            if (playerSequence[playerSequence.length - 1] !== gameSequence[playerSequence.length - 1]) {
                gameOver = true;
                message.textContent = "Game Over! Click 'Start Game' to try again.";
            } else if (playerSequence.length === gameSequence.length) {
                setTimeout(nextRound, 1000);
            }
        }

        function resetGame() {
            gameOver = false;
            message.textContent = "Wait for Simon to say...";
            level = 0;
            gameSequence = [];
            playerSequence = [];
        }
    </script>
</body>
</html>
